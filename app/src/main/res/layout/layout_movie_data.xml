<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Her"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_movie_year"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_movie_language"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:background="@color/white_80"
        app:cardCornerRadius="@dimen/card_border_radius"
        android:layout_marginHorizontal="@dimen/quarter_padding"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_movie_year"
            android:layout_marginHorizontal="@dimen/half_padding"
            android:layout_marginVertical="@dimen/quarter_padding"
            tools:text="2013"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_movie_language"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        app:layout_constraintStart_toEndOf="@id/card_movie_year"
        app:layout_constraintEnd_toStartOf="@id/card_movie_rating"
        android:background="@color/white_80"
        app:cardCornerRadius="@dimen/card_border_radius"
        android:layout_marginHorizontal="@dimen/quarter_padding"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_movie_language"
            android:layout_marginHorizontal="@dimen/half_padding"
            android:layout_marginVertical="@dimen/quarter_padding"
            tools:text="en"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_movie_rating"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        app:layout_constraintStart_toEndOf="@id/card_movie_language"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/card_rating_background"
        app:cardCornerRadius="@dimen/card_border_radius"
        android:layout_marginHorizontal="@dimen/quarter_padding"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/quarter_padding"
                android:id="@+id/iv_rating_star"
                android:src="@drawable/ic_baseline_star_rate_24"
                android:background="@color/transparent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rating_value"
                android:background="@color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_rating_star"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/half_padding"
                android:layout_marginVertical="@dimen/quarter_padding"
                tools:text="8.0"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_genres"
        app:layout_constraintTop_toBottomOf="@id/card_movie_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Heartfelt · Romance · Sci-fi · Drama"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_watch_trailer"
        android:text="@string/watch_trailer"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_genres"
        android:background="@color/transparent"
        android:foreground="@drawable/outline_button_background"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_plot_label"
        android:text="@string/movie_plot"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/btn_watch_trailer"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_plot_value"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_plot_label"
        tools:text="In a near future, a lonely writer..."
        />


</androidx.constraintlayout.widget.ConstraintLayout>