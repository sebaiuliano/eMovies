<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EMovies.ActionBarTheme" parent="Theme.EMovies">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/Theme.EMovies.TransparentActionBar</item>
    </style>

    <style name="Theme.EMovies.TransparentActionBar">
        <item name="background">@color/transparent</item>
    </style>

    <style name="TextAppearance.BaseStyle" parent="Theme.EMovies">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="HeaderStyle" parent="TextAppearance.BaseStyle">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="HeaderStyle.LargeText" parent="HeaderStyle">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="HeaderStyle.MediumText" parent="HeaderStyle">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="HeaderStyle.SmallText" parent="HeaderStyle">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="BodyStyle" parent="TextAppearance.BaseStyle">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BodyStyle.LargeText" parent="BodyStyle">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="BodyStyle.SmallText" parent="BodyStyle">
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="HeavyBodyStyle.SmallText" parent="TextAppearance.BaseStyle">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="Theme.EMovies.Detail" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="ButtonSelected" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
    </style>

    <style name="ButtonNotSelected" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="colorOutline">@color/grey</item>
    </style>

</resources>